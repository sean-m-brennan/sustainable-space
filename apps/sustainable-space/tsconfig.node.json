{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "composite": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "locate-user/*": ["../../packages/locate-user/src/*"],
      "space-data-api/*": ["../../packages/space-data-api/src/*"],
      "space-sim/*": ["../../packages/space-sim/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["vite.config.ts"]
}
